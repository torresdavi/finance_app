<%= form_with(model: @income, url: incomes_path, local: true) do |form| %>
<% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
<% else %>
    <div class="alert"><%= flash[:notice] %></div>
<% end %>
  <div class="col-md-2">
    <%= form.label :monthly_income, 'Renda Mensal', class:'form-label' %>
    <%= form.number_field :monthly_income, required: true, class:'form-control' %>
  </div>

  <div class="col-md-2">
    <%= form.label :month, 'MÃªs', class:'form-label' %>
    <%= form.number_field :month, required: true, class:'form-control' %>
  </div>

  <div class="col-md-2">
    <%= form.label :year, 'Ano', class:'form-label' %>
    <%= form.number_field :year, required: true, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Enviar', class:'btn btn-success' %>
  </div>
<% end %>