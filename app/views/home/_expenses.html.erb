<h4>Minhas Despesas</h4> <br/>
<div class="col-md-6">
    <table class="table table-hover table-responsive table-bordered table-sm">
      <thead>
        <tr>
          <th>Descrição</th>
          <th>Valor</th>
          <th>Categoria</th>
          <th colspan="2">Ações</th>
        </tr>
      </thead>
      <tbody id="expenses_body">
        <% @expenses.each do |expense|%>
          <tr>
            <td><%= expense.name %></td>
            <td>R$ <%= expense.expense_value %></td>
            <td><%= I18n.t("models.expense.categories.#{expense.category}") %></td>
            <td><%= link_to "Editar", edit_expense_path(expense) %></td>
            <td><%= link_to "Excluir", expense, data: { turbo_method: :delete } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div>
      <%= link_to 'Cadastrar nova despesa', new_expense_path, data: { turbo_frame: 'new_expense' } %>
    </div>
    <turbo-frame id="new_expense"></turbo-frame>
</div>