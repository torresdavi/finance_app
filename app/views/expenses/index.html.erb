<h1>Minhas despesas</h1>

<div class="">
  <table class="table">
    <thead>
      <tr>
        <th>Descrição</th>
        <th>Valor</th>
        <th>Tipo da despesa</th>
      </tr>
    </thead>
    <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <td><%= expense.name %></td>
          <td><%= expense.expense_value %></td>
          <td><%= I18n.t("models.expense.categories.#{expense.category}")%></td>
        </tr>
      <% end %>
  </tbody>
</div>